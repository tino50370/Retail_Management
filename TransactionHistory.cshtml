<div class="row">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Transaction History</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <p></p>
                    <table id="gradient-style" style="width:100%; border-style: none ">
                        <tbody>
                            <tr>
                                <td class="style3" style="border-style: none">
                                    <div class="editor-field">
                                        Show @Html.DropDownList("SizeR", new SelectList(new[] { "10", "20", "50", "100", "200", "500", "1000" },@ViewData["listSize"].ToString()), new { id = "SizeR",style="width:80%", @class = "form-control" })
                                    </div>
                                </td>
                                <td class="style3" style="border-style: none">
                                    <div class="editor-field">
                                        Branch @Html.DropDownList("Branch", new SelectList((IEnumerable<SelectListItem>)ViewBag.Supplier, "Value", " Text", @ViewData["Branch"]), new { id = "Branch", style = "width:80%", @class = "form-control" })
                                    </div>
                                </td>
                                <td class="style3" style="border-style: none">
                                    <div class="editor-field">
                                        Transaction Type @Html.DropDownList("TranType", new SelectList((IEnumerable<SelectListItem>)ViewBag.TranTypes, "Value", " Text", @ViewData["Trantype"]), new { id = "TranType", style = "width:80%", @class = "form-control" })
                                    </div>
                                </td>
                                <td>
                                    <div class="editor-field">
                                       Date <input type="text" style="width:80%" id="Date"  class="form-control" value="@ViewData["Date"]" />
                                       <input type="hidden" style="width:80%" id="Month" class="form-control" value="@ViewData["Date"]" />
                                    </div>  
                                </td>
                                <td style="display:none">
                                    <div class="editor-field">
                                        End Date <input type="text" style="width:80%" id="eDate" class="form-control" value="@ViewData["eDate"]" />
                                        <input type="hidden" style="width:80%" id="eMonth" class="form-control" value="@ViewData["eDate"]" />
                                    </div>
                                </td>
                                <td>
                                        <div class="editor-field">
                                            Results For the @Html.DropDownList("SearchType", new SelectList(new[] { "Date", "Month", "Range" }, @ViewData["SearchType"]), new { id = "SearchType", @class = "form-control" })
                                        </div>
                                </td>
                                    @*<td class="style3" style="border-style: none">
                                        <div class="editor-field">
                                            Month @Html.DropDownList("Year", new SelectList(new[] { "2018", "2017"}, @ViewData["sStart"]), new { id = "Year", @class = "form-control" })
                                        </div>
                                    </td>*@
                            </tr>
                            <tr>
                                <td id="search" style="border-style: none" colspan="2">
                                    <div class="editor-field">
                                        General Search  <input type="text" style="width:80%" id="SearchInItems" placeholder="eg:search by any field value" class="form-control" value="@ViewData["searchTerm"]" />
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <br/>
                    <div>
                        <button class="btn btn-success btn-sm pull-right" onclick="GetTrantype('0')">Transactions</button>
                        <button class="btn btn-warning  btn-sm pull-right" onclick="GetTrantype('4')">Account Creations</button>
                    </div>
                     <div id="tableData">
                        <table id="datatable-buttons" class="table table-striped" style="width:100%">
                            <thead>
                                <tr>
                                    <th>
                                        Till
                                    </th>
                                    <th>
                                        Amount
                                    </th>
                                    <th>
                                        Receipt
                                    </th>
                                    <th>
                                        Description
                                    </th>
                                    <th>
                                        Date
                                    </th>
                                    <th>
                                        CustomerID
                                    </th>
                                    <th>
                                        Cashier
                                    </th>
                                    <th>
                                        Branch
                                    </th>
                                    <th>Status</th>

                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var item in Model)
                                    {
                                        
                                            <tr  onclick="GetDetails('@Url.Action("TransactionDetails", "Loyalty")','@item.Description' + '_' + '@item.DestinationAccountNumber')">
                                                <td>
                                                    @item.TerminalId
                                                </td>
                                                <td>
                                                    @item.Amount 
                                                </td>
                                                <td>
                                                    @item.ReceiptNumber
                                                </td>
                                                <td>
                                                    @item.Description.Trim()
                                                </td>
                                                <td>
                                                    @item.DateCreated
                                                </td>
                                                <td>
                                                    @item.DestinationAccountNumber
                                                </td>
                                                <td>
                                                    @item.Username
                                                </td>
                                                <td>
                                                    @item.BranchName
                                                </td>
                                                <td>
                                                    @item.Status
                                                </td>

                                                @* <td><button class="btn btn-primary btn-sm pull-right" onclick="GetFancy('@Url.Action("TransactionDetails", "Loyalty")','@item.Id')">Details</button></td>
                                                *@
                                            </tr>
                                        
                                    }
                                }
                            </tbody>
                            <tr>
                                <th colspan="12" style="background-color: #E2E4FF;">
                                    <div onclick="GetPageR()" style="float: left; padding-left: 10px"> Pages</div>
                                    @for (int i = 1; i <= int.Parse(@ViewData["Pages"].ToString()); i++)
                                    {
                                        if (i == int.Parse(@ViewData["ThisPage"].ToString()))
                                        {
                                            <div onclick="GetPageR(@i)" style="float: left; padding-left: 4px; padding-right: 4px; border-style: solid; border-width:1px; margin-left:2px; border-color: Orange; color: Orange;cursor:pointer">@i</div>
                                        }
                                        else
                                        {
                                            <div onclick="GetPageR(@i)" style="float: left; padding-left: 4px; padding-right: 4px; border-style: solid; border-width:1px; margin-left:2px; border-color: Black;cursor:pointer">@i</div>
                                        }
                                    }
                                    <div style="float: left; padding-left: 10px"> @ViewData["RecordData"]</div>
                                </th>
                            </tr>
                        </table>
                    </div>
                </div>

            </div>
</div>
</div>
</div>

