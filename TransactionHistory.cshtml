@model IEnumerable<RetailKing.Models.Tranlog>
@{
    ViewBag.Title = "Index";
}
<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.form.min.js")"></script> 
<script src="@Url.Content("~/Content/Administration/js/datepicker/daterangepicker.js")"></script>

<script type="text/javascript">
    $(document).ready(function (event) {
        $.fancybox.hideLoading();
        $.fancybox.close();
        $("#SearchInItems").focus();

        $("#Branch").change(function (event) {
            event.preventDefault();
            $.fancybox.showLoading();
            $.ajax({
                type: "Post",
                url: '@Url.Action("TransactionHistory", "Loyalty")',
                dataType: 'html',
                data: {
                    sStart: $("#Month").val(),
                    sSearch: $("#SearchInItems").val(),
                    iDisplayLength: $("#SizeR").val(),
                    sColumns: $("#Branch").val(),
                    iTransactionType: $("#TranType").val(),
                    sEcho: $("#SearchType").val()
                },
                success: function (resp) {
                    $.fancybox.hideLoading();
                    $("#panel").html(resp);
                },
                error: function (data) {
                    alert(data);
                }
            });
        });

        $("#TranType").change(function (event) {
            event.preventDefault();
            $.fancybox.showLoading();
            $.ajax({
                type: "Post",
                url: '@Url.Action("TransactionHistory", "Loyalty")',
                dataType: 'html',
                data: {
                    sStart: $("#Month").val(),
                    sEnd: $("#eMonth").val(),
                    sSearch: $("#SearchInItems").val(),
                    iDisplayLength: $("#SizeR").val(),
                    sColumns: $("#Branch").val(),
                    iTransactionType: $("#TranType").val(),
                    sEcho: $("#SearchType").val()
                },
                success: function (resp) {
                    $.fancybox.hideLoading();
                    $("#panel").html(resp);
                },
                error: function (data) {
                    alert(data);
                }
            });
        });

        $("#SizeR").change(function (event) {
            event.preventDefault();
            $.fancybox.showLoading();
            $.ajax({
                type: "Post",
                url: '@Url.Action("TransactionHistory", "Loyalty")',
                dataType: 'html',
                data: {
                    sStart: $("#Month").val(),
                    sSearch: $("#SearchInItems").val(),
                    iDisplayLength: $("#SizeR").val(),
                    sColumns: $("#Branch").val(),
                    iTransactionType: $("#TranType").val(),
                    sEcho: $("#SearchType").val()
                },
                success: function (resp) {
                    $('#panel').html(resp);
                },
                error: function (data) {
                }
            });
        });

        $("#SearchType").change(function (event) {
            event.preventDefault();
            $.fancybox.showLoading();
            $.ajax({
                type: "Post",
                url: '@Url.Action("TransactionHistory", "Loyalty")',
                dataType: 'html',
                data: {
                    sStart: $("#Month").val(),
                    sSearch: $("#SearchInItems").val(),
                    iDisplayLength: $("#SizeR").val(),
                    sColumns: $("#Branch").val(),
                    iTransactionType: $("#TranType").val(),
                    sEcho: $("#SearchType").val()
                },
                success: function (resp) {
                    $.fancybox.hideLoading();
                    $('#panel').html(resp);
                },
                error: function (data) {
                }
            });
        });

       

        $("#SearchInItems").keyup(function () {
            // event.preventDefault();
            $.fancybox.showLoading();
            var s = $('#SearchInItems').val();
            var  typinTimer;
            clearTimeout(typinTimer);
            typinTimer = setTimeout(function () {
                if ($('#SearchInItems').val() == s && $('#SearchInItems').val() != "") {
                    $.fancybox.showLoading();
                    $.ajax({
                        type: "Post",
                        url: '@Url.Action("TransactionHistory", "Loyalty")',
                        dataType: 'html',
                        data: {
                            sStart: $("#Month").val(),
                            sSearch: $("#SearchInItems").val(),
                            iDisplayLength: $("#SizeR").val(),
                            sColumns: $("#Branch").val(),
                            iTransactionType: $("#TranType").val(),
                            sEcho: $("#SearchType").val()
                        },
                        success: function (resp) {
                            $.fancybox.hideLoading();
                            $('#panel').html(resp);
                        },
                        error: function (data) {
                        }
                    });
                }
            }, 2000);
        });

        $("#tableData input").keypress(function (e) {
            if (e.keyCode == 13) {
                if (this.value == '') {
                   // alert($("#" + this.id).val());
                }
                else {
                    if (isNaN(this.value / 1) == false) {
                        var dd = this.id;
                        $.ajax({
                            type: "Post",
                            url: '@Url.Action("TransactionHistory", "Loyalty")',
                            dataType: 'html',
                            data: {
                                Qty: $("#" + this.id).val(),
                                ItemCode: this.id
                            },
                            success: function (resp) {

                                var jsonItem = $.parseJSON(resp);
                                $('.' + dd).text(jsonItem.NewStock);
                                $('.balance_' + dd).text(jsonItem.Balance);
                                $('#' + dd).val('');

                            },
                            error: function (data) {
                            }
                        });
                    }
                    else {
                        alert("Please enter number only");
                    }
                }
            }
        });

    });
    function GetTrantype(Id) {
        //event.preventDefault();
        $.fancybox.showLoading();
        $.ajax({
            type: "Post",
            url: '@Url.Action("TransactionHistory", "Loyalty")',
            dataType: 'html',
            data: {
                sEcho: $("#SearchType").val(),
                sStart: $("#Month").val(),
                sSearch: $("#SearchInItems").val(),
                iDisplayLength: $("#SizeR").val(),
                sColumns: $("#Branch").val(),
                iTransactionType: Id,
                sEcho: $("#SearchType").val()
            },
            success: function (resp) {
                $.fancybox.hideLoading();
                $('#panel').html(resp);
            },
            error: function (data) {
            }
        });
    };
</script>

<script type="text/javascript">
     function GetPageR(thispage) {
         $.ajax({
             type: "Post",
             url: '@Url.Action("TransactionHistory", "Loyalty")',
             dataType: 'html',
             data: {
                 sStart: $("#Month").val(),
                 sSearch: $("#SearchInItems").val(),
                 sColumns: $("#Branch").val(),
                 iDisplayStart: thispage,
                 iDisplayLength: $("#SizeR").val(),
                 iTransactionType: $("#TranType").val(),
                 sEcho: $("#SearchType").val()
             },
             success: function (resp) {
                 $('#panel').html(resp);
             },
             error: function (data) {
             }
         });
     }
</script>

<link href="@Url.Content("~/Content/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css")"rel="stylesheet">
<link href="@Url.Content("~/Content/vendors /datatables.net-buttons-bs/css/buttons.bootstrap.min.css")" rel="stylesheet">
