@{
    ViewBag.Title = "newStock";
}


<div class="row">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>New Stock </h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <p>You are adding new stock from @ViewData["Supplier"]</p>
                    <div id="stockdetail">
                        <span class="display-label"> @ViewData["Qty"] @ViewData["ItemName"] at </span>
                        <span class="display-field">
                            $ <input type="text" id="Amount" style="width: 35px" /> each
                        </span>
                    </div>
                    <p></p>
                    <div>
                        <div id="Error" style="display:none; border:1px solid #E74C3C;color:#E74C3C; padding:8px 8px 8px 8px ; margin-top:10px;margin-bottom: 10px;width:99%;height:20px">

                        </div>
                        <div>

                            <button class="btn btn-success" onclick="AddStock('@ViewData["ItemName"]','@ViewData["Money"]')">Save</button>
                            <button class="btn btn-warning" onclick="CloseCancel()">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function (event) {
        document.getElementById("Amount").focus();

        $('#Amount').keyup(function (event) {
            $('#Error').hide();
        });
    });
</script>
