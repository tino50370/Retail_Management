@{
    ViewBag.Title = "Code Registration";
}
@using BotDetect.Web.UI.Mvc;
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(function () {
        $("#rcode").hide();
    });
</script>
<section class="main-content col-lg-13 col-md-12 col-sm-12">
<div class="row">
        @using (Html.BeginForm("CodeRegister", "Account", FormMethod.Post, new { enctype = "multipart/form-data", @name = "CodeReg", id = "CodeReg" }))
        {
            MvcCaptcha sampleCaptcha = new MvcCaptcha("SampleCaptcha");
            @Html.AntiForgeryToken()
            <div class="col-lg-12 col-md-12 col-sm-12">

        <div class="carousel-heading no-margin">
            <h4>Code Registration</h4>
        </div>
                <div class="page-content">

                    <div style="color:#E74C3C; padding:8px 8px 8px 8px ; margin-top:10px;margin-bottom: 20px;width:80%;height:40px">
                        @Html.ValidationSummary(true)
                    </div>
                    <div class="row">
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <p>Enter your registration code</p>
                        </div>
                        <div class="col-lg-8 col-md-8 col-sm-8">
                            <input type="text" id="regcode" name="regcode" placeholder="Enter your registration code" style="width:100%">
                        </div>
                        </div>
                        <div class="row">
                               
                            <div class="col-lg-4 col-md-4 col-sm-4">
                               
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-8">
                                @Html.Captcha(sampleCaptcha)
                            </div>
                                    </div>
                            <div class="row">
                                <div class="col-lg-4 col-md-4 col-sm-4">
                                    <p>Retype charectors from picture above</p>
                                </div>
                                <div class="col-lg-8 col-md-8 col-sm-8">
                                    @Html.TextBox("CaptchaCode", "", new { style = "width:81%", placeholder = "Retype charectors from picture above" })
                                    <input type="submit" name="newsletter-submit" value="Submit">
                                </div>

                             </div>
                            </div>
                            </div>
       }

                        </div>
</section>