@model RetailKing.Models.Company

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Company</legend>

    <div class="display-label">name</div>
    <div class="display-field">@Model.name</div>

    <div class="display-label">status</div>
    <div class="display-field">@Model.status</div>

    <div class="display-label">location</div>
    <div class="display-field">@Model.location</div>

    <div class="display-label">Address1</div>
    <div class="display-field">@Model.Address1</div>

    <div class="display-label">Address2</div>
    <div class="display-field">@Model.Address2</div>

    <div class="display-label">Contact1</div>
    <div class="display-field">@Model.Contact1</div>

    <div class="display-label">Contact2</div>
    <div class="display-field">@Model.Contact2</div>

    <div class="display-label">dated</div>
    <div class="display-field">@String.Format("{0:g}", Model.dated)</div>

    <div class="display-label">Footer1</div>
    <div class="display-field">@Model.Footer1</div>

    <div class="display-label">Footer2</div>
    <div class="display-field">@Model.Footer2</div>

    <div class="display-label">Footer3</div>
    <div class="display-field">@Model.Footer3</div>

    <div class="display-label">footer4</div>
    <div class="display-field">@Model.footer4</div>

    <div class="display-label">Logo</div>
    <div class="display-field">@Model.Logo</div>

    <div class="display-label">VatNo</div>
    <div class="display-field">@Model.VatNo</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


