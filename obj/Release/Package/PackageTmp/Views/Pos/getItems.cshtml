@model IEnumerable<RetailKing.Models.Item> 
@{
    ViewBag.Title = "Product Search";
}

   <div>
             <table style="width:100%; border:1px solid #00B294; ">
              <tbody>
              @foreach (var menu in Model)
              {
              <tr style="width:100%; background-color: #00B294; cursor: pointer">
              <td style="width: 10%; border:1px solid #00B294; border-right-style: none; background-color: White; vertical-align: middle">
                  @if(menu.ThumbImage == null)
                  { 
                  <img alt="" src="@Url.Content("~/Content/Images/bag.png")" style="width: 100%; max-width: 40px" />
                  }
                  else
                  {
                    <img alt="" src="@Url.Content(menu.ThumbImage)" style="width: 100%; max-width: 40px" />
                  }
              </td>
              <td style="width: 80%;float:left;border-bottom-color: White; border-left-style:none; border-right-style: none;text-align: center"><span style=" font-size: 15px; color: White;width:100% ">@menu.ItemName </span><br /><span style="color:#FFFF00; font-weight: bold;width:100% ">@menu.ItemCode</span></td>
              <td style="width: 10%;float:left;border-bottom-color: White; border-left-style:none; border-right-style: none; font-size: 13px; vertical-align: middle; text-align:center; color: White; font-weight: bold">$@String.Format("{0:F}",@menu.SellingPrice)</td>
              <td id="btns-@menu.ID" style="width: 46%;border-bottom-color: White; border-left-style:none; border-right-style: none; font-size: 13px; vertical-align: middle; text-align:left; color: White; font-weight: bold">
                      <div class="numeric-input">
                          <input id="quantity-@menu.ID" type="text" value="1">
                          <span class="arrow-up" onclick="PlusOne('@menu.ID')"><i class="icons icon-up-dir"></i></span>
                          <span class="arrow-down" onclick="minusOne('@menu.ID')"><i class="icons icon-down-dir"></i></span>
                      </div>
                      <a href="@Url.Action("Details", "items", new { id = @menu.ID })">
                          <span class="add-to-cart ">
                              <span class="action-wrapper">
                                  <i class="icons icon-book-2"></i>
                                  <span class="action-name">View Detail</span>
                              </span>
                          </span>
                      </a>
                      @if (menu.Balance == 0)
                      {
                        <a>
                            <span class="add-to-favorites ">
                                <span class="action-wrapper">
                                    <i class="icons icon-basket-2"></i>
                                    <span class="action-name">Out of Stock</span>
                                </span>
                            </span>
                        </a>

                      }
                      else
                      {
                      <a>
                          <span class="add-to-trash" onclick="AddToCartSearch('@menu.ID','@menu.SellingPrice')">
                              <span class="action-wrapper">
                                  <i class="icons icon-basket-2"></i>
                                  <span class="action-name">Add to cart</span>
                              </span>
                          </span>
                      </a>
                      }
                  </td>
              </tr>
              }
            @if(Model.Count()==0)
            {
                <tr  style=" background-color: #00B294; cursor: pointer">
                    <td colspan="4" style="border-bottom-color: White; border-left-style:none; border-right-style: none;text-align:center"><span style=" font-size: 15px; color: White; ">no items found </span></td>
                 </tr>
            }
</tbody>
              </table>
  </div> 
