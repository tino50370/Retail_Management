@model RetailKing.Models.login 
         
@{
    ViewBag.Title = "Login";
}


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{ 

   <div style="width: 100%" >

   <div style=" float: left; width: 50%; "><img alt="" style=" float : right;width:70%; max-width: 400px" src="@Url.Content("~/Content/Images/homebg.png")" /> </div>
    <div style=" float:left; clear:right; width: 49%; max-width:400px; margin-left: 10px; margin-top:8%; border-left-style:solid ; border-left-width: 1px; vertical-align:middle ">
   <div style="  margin-left: 10px; ">
   <h1>Sign in</h1>
    <div class="editor-label">@Html.LabelFor(m => m.username ) </div>
   <div class="editor-field">
   @Html.TextBoxFor(m => m.username)
    @Html.ValidationMessageFor(m => m.username)
   </div> 
    <div class="editor-label"> @Html.LabelFor(m => m.password )</div>
    <div class="editor-field">
    @Html.PasswordFor(m => m.password)
     @Html.ValidationMessageFor(m => m.password)
    
    </div>
    <div style=" margin-top: 10px">
    <input type="submit" value="Sign In" />
    @Html.ValidationSummary()  
    </div>
    </div>   
    </div> 
    </div> 
                   
}
