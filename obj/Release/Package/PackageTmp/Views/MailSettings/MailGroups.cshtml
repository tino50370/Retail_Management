@model IEnumerable<RetailKing.Models.MailGroup>

@{
    ViewBag.Title = "Index";
}
<div class="col-md-8">
    <div class="x_panel">
        <div class="x_title">
            <h2>Mail Groups</h2>

            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <p></p>

            <table style="width:100%" class="table table-stripe">
                <tr>
                    <th>
                        Main Email
                    </th>
                    <th>
                        Cc
                    </th>
                    <th>
                        Bcc 
                    </th>
                    
                    <th></th>
                </tr>

                @{

                    int cnt = 0;
                    foreach (var item in Model)
                    {
                       
                            <tr>

                                <td>
                                    @item.Receiver
                                </td>
                                <td>
                                    @item.Cc  
                                </td>
                                <td>
                                    @item.Bcc  
                                </td>
                                
                                <td>
                                    <button class="btn btn-primary btn-xs" onclick="GetSideView('@Url.Action("EditMailGroups", "MailSettings", new { Id =item.Id })')">Edit</button>
                                    <button class="btn btn-danger btn-xs" onclick="GetView('@Url.Action("DeleteMailGroups", "MailSettings",new { Id =item.Id })')">Delete</button>
                                </td>
                            </tr>
                       
                    }
                }
            </table>

        </div>
    </div>
</div>
<div id="RightPanel" class="col-md-4">
</div>

<script type="text/javascript">
    $(function () {
        GetSideView('@Url.Action("CreateMailGroups", "MailSettings")')
    })
</script>