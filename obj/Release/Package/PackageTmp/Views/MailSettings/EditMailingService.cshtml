@model RetailKing.Models.MailingService

@{
    ViewBag.Title = "Edit";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(function () {
        var status = $('#ajaxStatus');
        var percent = $('.percent');
        var bar = $('.bar');
        var options = {
            beforeSend: function () {
                status.fadeIn();
                //bar.width('0%');
                percent.html('0%');
            },
            uploadProgress: function (event, position, total, percentComplete) {
                var pVel = percentComplete + '%';
                // bar.width(pVel);
               // alert("progress");
                percent.html(pVel);

            },
            success: function (result) {
                if (result == "error") {
                    alert("An error occured during upload.\r\n Your file has not been uploaded")
                    status.fadeOut(800);
                }
                else if (result == "Format") {
                    alert("Your file format is not supported. Please select a video file")
                    status.fadeOut(800);
                }
                else if (result == "No File") {
                    alert("Please select a video to upload")
                    status.fadeOut(800);
                }
                else {
                    $('#panel').html(result);
                    status.fadeOut(800);
                }
            },

             error: function (xhr, textStatus, errorThrown) {
                    $('#panel').html(errorThrown);
                    status.fadeOut(800);
                }

        };
        $("#editSyskeys").ajaxForm(options);
    });
</script>

<div class="col-md-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Edit Mail Service</h2>

            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="col-md-12">
                @using (Html.BeginForm("EditMailingService", "MailSettings", FormMethod.Post, new { id = "editSyskeys" }))
                {
                    @Html.ValidationSummary(true)
                    @Html.AntiForgeryToken()
                    <fieldset>
                        @Html.HiddenFor(m => m.Id)
                        @Html.HiddenFor(m => m.Status)
                        @Html.Partial("_MailingServiceCreateOrEdit", Model)

                    </fieldset>
                }
                <br/>
                <div>
                    <button class="btn btn-success" onclick="SaveView('editSyskeys')">Save</button>
                    <button class="btn btn-warning" onclick="GetView('@Url.Action("MailingServices", "MailSettings")')">Cancel</button>
                </div>
            </div>
        </div>
        <iframe id="UploadTarget" name="UploadTarget" style="position: absolute; left: -999em; top: -999em;"></iframe>
        <div id="Images"></div>
    </div>
</div>