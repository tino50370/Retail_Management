@model RetailKing.Models.MailGroup

@{
    ViewBag.Title = "Delete";
}

<div class="col-md-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Delete</h2>

            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="col-md-8">

                <h3>Are you sure you want to delete this Group?</h3>
                <fieldset>

                    <div class="display-label">Receiver</div>
                    <div class="display-field">@Model.Receiver  </div>

                    <div class="display-label">Cc</div>
                    <div class="display-field">@Model.Cc</div>

                    <div class="display-label">Bcc</div>
                    <div class="display-field">@Model.Cc</div>

                    <br/>

                </fieldset>
                @using (Html.BeginForm("DeleteMailGroups", "MailSettings", FormMethod.Post, new { enctype = "multipart/form-data", @name = "Create", id = "createMailList" }))
                {
                    <p>
                        @Html.HiddenFor(m => m.Id)

                        <button class="btn btn-danger" onclick="SaveView('createMailList')">Delete</button>
                        <a class="btn btn-warning" onclick="GetView('@Url.Action("MailGroups", "MailSettings")')" data-original-title="Top Navbar"><span class="hidden-minibar">Back</span></a> 

                    </p>
                }

            </div>
        </div>
    </div>
</div>