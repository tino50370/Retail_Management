        <td>
            @Html.DisplayFor(modelItem => item.Debit4)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Debit5)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Debit6)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Credit1)
        </td>
