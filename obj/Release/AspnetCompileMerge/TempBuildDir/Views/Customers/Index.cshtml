             url: '@Url.Action("Index", "Customers")',
             dataType: 'html',
             data: {
                 category: $("#cat").val(),
                 ItemCode: '',
                 iDisplayStart: thispage,
                 iDisplayLength: $("#SizeR").val(),
                 sEcho: 1
             },
             success: function (resp) {
                 $('#panel').html(resp);
             },
             error: function (data) {
             }
         });
     }  
    </script>

