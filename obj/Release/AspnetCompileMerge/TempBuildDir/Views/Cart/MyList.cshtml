@model IEnumerable<RetailKing.Models.shopingList>

@{
    ViewBag.Title = "MyList";
}


<div class="row content">


    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="breadcrumbs">
            <p><a href="@Url.Action("Index","Home")">Home</a> <i class="icons icon-right-dir"></i> <a href="#">Shopping List </a> <i class="icons icon-right-dir"></i> Collection Points </p>
        </div>
    </div>


    <!-- Main Content -->
    <section class="main-content col-lg-9 col-md-9 col-sm-9">
        <div id="product-single">

            <div style="background-color:#34495E; height:40px; color:#fff; font-size:large; font-weight:bold; margin: 10px 15px">
                <span style="top :10px;margin-left:20px; color:#fff">Select A Shopping list</span>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12">

                <table class="order-table">
                    <tr style="background:#A1AAAF; color:#ffffff; height:40px; text-align:start ">

                        <th style="border: solid 1px #ffffff">
                            @Html.DisplayNameFor(model => model.Title)
                        </th>

                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr style="cursor:pointer" onclick="GetShopList('@item.ID')">
                            <td style="width:30%">
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>

                        </tr>
                    }

                </table>
            </div>
        </div>
    </section>
</div>