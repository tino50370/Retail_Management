@model RetailKing.Models.Customer

@{
    ViewBag.Title = "CreateAcount";
}
<div>

    @using (Html.BeginForm("CreateAcount", "Accounts", FormMethod.Post, new { id = "createCustomers" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        @Html.HiddenFor(m => m.AccountCode)


        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="breadcrumbs">
                <p><a href="#">Home</a> <i class="icons icon-right-dir"></i> Create an account</p>
            </div>
        </div>

            <!-- Main Content -->
        <section class="main-content col-lg-9 col-md-9 col-sm-9">

            <div class="row">

                <div class="col-lg-12 col-md-12 col-sm-12 register-account">

                    <div class="carousel-heading no-margin">
                        <h4>New User</h4>
                    </div>

                    <div class="page-content">
                        <div class="row">

                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <p><strong>Shopper information</strong></p>
                            </div>

                            <div class="col-lg-4 col-md-4 col-sm-4">
                                <p>E-Mail*</p>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-8">
                                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email Address" })
                            </div>

                        </div>
                        <div class="row">

                            <div class="col-lg-4 col-md-4 col-sm-4">
                                <p>Title</p>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-8">
                                <select class="chosen-select">
                                    <option>Mr</option>
                                    <option>Mrs</option>
                                    <option>Ms</option>
                                    <option>Dr</option>
                                    <option>Prof</option>
                                </select>
                            </div>

                        </div>
                        <div class="row">

                            <div class="col-lg-4 col-md-4 col-sm-4">
                                <p>Name and Surname*</p>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-8">
                                @Html.TextBoxFor(m => m.ContactPerson, new { placeholder = "Name & Surname" })
                            </div>

                        </div>

                        <div class="row">

                            <div class="col-lg-4 col-md-4 col-sm-4">
                                <p>Displayed name*</p>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-8">
                                @Html.TextBoxFor(m => m.CustomerName, new { placeholder = "Display name" })
                            </div>

                        </div>

                        <div class="row" style="display:none">

                            <div class="col-lg-4 col-md-4 col-sm-4">
                                <p>Network Level</p>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-8">
                                @Html.DropDownListFor(m => m.NetworkType, new SelectList(
                                    (IEnumerable<SelectListItem>)ViewBag.Level,
                                          "Value",
                                    "Text"), new { style = "width:100%; height: 30px", @class = "chosen-select" })

                            </div>
                        </div>

                        <div id="RegFee" class="row" style="display:none">
                            <div class="col-lg-4 col-md-4 col-sm-4">
                                <p>Registration Fee </p>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-8">
                                <p id="Fee" style=" color:#F5791F">$@ViewData["NetwokFee"]</p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <p><strong>Delivery Details</strong></p>
                            </div>
                            <div class="col-lg-4 col-md-4 col-sm-4">
                                <p>Address1 </p>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-8">
                                @Html.TextBoxFor(m => m.Address1, new { placeholder = "Address" })
                            </div>
                        </div>

                        <div class="row">

                            <div class="col-lg-4 col-md-4 col-sm-4">
                                <p>Address2</p>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-8">
                                @Html.TextBoxFor(m => m.Address2, new { placeholder = "Address" })
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-lg-4 col-md-4 col-sm-4">
                                <p>City/Town</p>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-8">
                                @Html.DropDownListFor(m => m.City, new SelectList(
                                    (IEnumerable<SelectListItem>)ViewBag.Cities,
                                          "Value",
                                    "Text"), new { style = "width:100%; height: 30px", @class = "chosen-select" })
                            </div>
                        </div>

                        <div class="row">

                            <div class="col-lg-4 col-md-4 col-sm-4">
                                <p>Suburb/Area</p>
                            </div>
                            <div id="Suburb_select" class="col-lg-8 col-md-8 col-sm-8">
                                @Html.DropDownListFor(m => m.Suburb, new SelectList(
                                     (IEnumerable<SelectListItem>)ViewBag.Suburb,
                                          "Value",
                                    "Text"), new { style = "width:100%; height: 30px", @class = "chosen-select" })
                            </div>

                        </div>

                        <div class="row">

                            <div class="col-lg-4 col-md-4 col-sm-4">
                                <p>Phone</p>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-8">
                                @Html.TextBoxFor(m => m.Phone1, new { placeholder = "Phone" })
                            </div>

                        </div>

                        <div class="row">

                            <div class="col-lg-4 col-md-4 col-sm-4">
                                <p>Mobile Phone</p>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-8">
                                @Html.TextBoxFor(m => m.Phone1, new { placeholder = "Mobile Phone" })
                            </div>

                        </div>

                        <div class="row">
                            @if(ViewData["Success"].ToString() == "Success")
                            {
                                <div id="Success" style="display:none;border: 1px solid #2ECC9F;color:#E74C3C; padding:8px 8px 8px 8px ;  margin-top:10px;margin-bottom: 20px; width:80%;height:40px">
                                    Registration Completed Successfuly
                                </div>
                            }
                            else
                            { 
                            <div id="Error" style="display:none; border:1px solid #E74C3C;color:#E74C3C; padding:8px 8px 8px 8px ; margin-top:10px;margin-bottom: 20px;width:80%;height:40px">
                                Sorry Registration Failed Please check your data
                            </div>
                            }
                           

                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <input class="big" type="submit" value="Register">
                                <input class="big" type="reset" value="Clear">
                            </div>

                        </div>
                    </div>

                </div>

            </div>

        </section>
            <!-- /Main Content -->
            <!-- Sidebar -->
        <aside class="sidebar col-lg-3 col-md-3 col-sm-3 right-sidebar">

            <!-- Categories -->
            <div class="row sidebar-box purple">

                <div class="col-lg-12 col-md-12 col-sm-12">

                    <div class="sidebar-box-heading">
                        <i class="icons icon-folder-open-empty"></i>
                        <h4>Categories</h4>
                    </div>
                    @{
        var cats = (from e in Model.categories.Where(u => u.AccountCode.Length == 4) select e).ToList();
                    }
                    <div class="sidebar-box-content">
                        <ul>
                            @foreach (var cat in cats)
                            {
                                var subcats = (from e in Model.categories.Where(u => u.AccountCode.StartsWith(cat.AccountCode + "-")) select e).ToList();
                                <li>
                                    <a href="@Url.Action("Index", "Category", new { id=cat.AccountName  })">@cat.AccountName <i class="icons icon-right-dir"></i></a>
                                    @if (subcats.Count > 0)
                                    {
                                        int runs = subcats.Count / 5;
                                        if (subcats.Count % 5 != 0)
                                        { runs = runs + 1; }
                                        <ul class="sidebar-dropdown">
                                            @for (int i = 0; i < runs; i++)
                                            {
                                                var top5 = (from e in subcats.Skip(i) select e).Take(5);
                                                <li>
                                                    <ul>
                                                        @foreach (var scat in subcats)
                                                        {
                                                            <li>
                                                                <a href="@Url.Action("Index", "Category", new { id = scat.AccountName }) ">@scat.AccountName</a>
                                                            </li>
                                                        }
                                                    </ul>
                                                </li>
                                            }

                                        </ul>
                                    }
                                </li>
                            }
                        </ul>
                    </div>

                </div>

            </div>
            <!-- /Categories -->
            @if (Model.slides != null)
            {
                <div class="row sidebar-box">

                    <div class="col-lg-12 col-md-12 col-sm-12 sidebar-carousel">

                        <!-- Slider -->
                        <section class="sidebar-slider">
                            <div class="sidebar-flexslider">
                                <ul class="slides">
                                    @foreach (var slid in Model.slides)
                                    {
                                        <li>
                                            <a href="@Url.Action("Details", "items", new { id = slid.ID })"><img src="@Url.Content(slid.PromoImage)" alt=" slide1" /></a>
                                        </li>
                                    }

                                </ul>
                            </div>
                            <div class="slider-nav"></div>
                        </section>
                        <!-- /Slider -->

                    </div>

                </div>
            }


        </aside>
            <!-- /Sidebar -->



    }
    </div>
