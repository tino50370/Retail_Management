@model RetailKing.ViewModels.HomeVM 
@{
    ViewBag.Title = "SideMenu";
    int cntt = 0;
    string company = "";
    
}

  <div class="grid_2">
            <div class="box sidemenu">
                <div class="block" id="section-menu">
                    <ul class="section menu">
                        <li class="ic-charts"><a class="menuitem">Companies</a>
                            <ul class="submenu">
                            @if(@ViewData["Location"].ToString() == "HEADQUARTERS")
                            { 
                                foreach (var com in Model.companies)
                                {
                                    cntt =+1;
                                    if (cntt == 1)
                                    {
                                        company = com.company;
                                    }
                                <li><a href="@Url.Action("RetailKing", "Home", new { Company = @com.company })">@com.company  </a> </li>
                                }
                            }
                            else
                            {
                                <li><a href="@Url.Action("RetailKing", "Home", new { Company = @ViewData["Location"]})">@ViewData["Location"]</a> </li>
                            }
                            </ul>
                        </li>
                        <li><a class="menuitem">Sales Reports</a>
                            <ul class="submenu">
                                <li><a onclick="GetSalesProduct()">Sales by Product</a> </li>
                                <li><a onclick="GetSalesCategory()">Sales by Category</a> </li>
                                <li><a onclick="GetSalesSummary()">Sales Summary</a> </li>
                            </ul>
                        </li>
                        <li><a class="menuitem">Stock Movement</a>
                            <ul class="submenu">
                                <li><a onclick="GetView('@Url.Action("Payments", "Accounts")')">Purchases</a></li>
                                <li><a onclick="GetView('@Url.Action("Payments", "Accounts")')">Transfers</a> </li>
                            </ul>
                        </li>
                    @if (@ViewData["Location"].ToString() == "HEADQUARTERS" && @ViewData["Access"].ToString() == "ADMINISTRATOR")
                      {
                         <li><a class="menuitem">Cash Movement</a>
                            <ul class="submenu">
                                <li><a onclick="GetView('@Url.Action("Payments", "Accounts")')">Customers</a></li>
                                <li><a onclick="GetView('@Url.Action("Payments", "Accounts")')">Suppliers</a></li>
                                <li><a onclick="GetView('@Url.Action("Payments", "Accounts")')">Carpex</a></li>
                                <li><a onclick="GetView('@Url.Action("CashPosition", "Reports")')">Cash Position</a></li>
                            </ul>
                        </li>
                    }
                        
                </ul>
                </div>
            </div>
        </div>
  <script type="text/javascript">
        $(document).ready(function (event) {
          setupLeftMenu();
          setSidebarHeight();
      });
   </script>