@model RetailKing.Models.Customer

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Customer</legend>

    <div class="display-label">AccountCode</div>
    <div class="display-field">@Model.AccountCode</div>

    <div class="display-label">CustomerName</div>
    <div class="display-field">@Model.CustomerName</div>

    <div class="display-label">ContactPerson</div>
    <div class="display-field">@Model.ContactPerson</div>

    <div class="display-label">Address1</div>
    <div class="display-field">@Model.Address1</div>

    <div class="display-label">Address2</div>
    <div class="display-field">@Model.Address2</div>

    <div class="display-label">Phone1</div>
    <div class="display-field">@Model.Phone1</div>

    <div class="display-label">Phone2</div>
    <div class="display-field">@Model.Phone2</div>

    <div class="display-label">Username</div>
    <div class="display-field">@Model.Username</div>

    <div class="display-label">Dated</div>
    <div class="display-field">@String.Format("{0:g}", Model.Dated)</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


