@model RetailKing.Models.Inventory 

@{
    ViewBag.Title = "Index";
}
 <script type="text/javascript">
     $(document).ready(function (event) {
         $("#SearchInItems").focus();

         $("#cat").change(function (event) {
             event.preventDefault();
             $.ajax({
                 type: "Post",
                 url: 'Items/Index',
                 dataType: 'html',
                 data: {
                     category: $("#cat").val(),
                     ItemCode: "",
                     iDisplayLength: $("#SizeR").val(),
                     sEcho: 1
                 },
                 success: function (resp) {
                     $("#panel").html(resp);
                 },
                 error: function (data) {
                     alert(data);
                 }
             });
         });

         $("#SizeR").change(function (event) {
             event.preventDefault();

             $.ajax({
                 type: "Post",
                 url: '@Url.Action("Index", "Items")',
                 dataType: 'html',
                 data: {
                     category: $("#cat").val(),
                     ItemCode: '',
                     iDisplayLength: $("#SizeR").val(),
                     sEcho: 1
                 },
                 success: function (resp) {
                     $('#panel').html(resp);
                 },
                 error: function (data) {
                 }
             });
         });

         $("#SearchInItems").keyup(function () {
             // event.preventDefault();
             var s = $('#SearchInItems').val();
             //alert(s);
             clearTimeout(typinTimer);
             typinTimer = setTimeout(function () {
                 if ($('#SearchInItems').val() == s && $('#SearchInItems').val() != "") {
                     $.ajax({
                         type: "Post",
                         url: '@Url.Action("Index", "Items")',
                         dataType: 'html',
                         data: {
                             category: $("#cat").val(),
                             ItemCode: $("#SearchInItems").val(),
                             iDisplayLength: $("#SizeR").val(),
                             sEcho: 1
                         },
                         success: function (resp) {
                             $('#panel').html(resp);
                         },
                         error: function (data) {
                         }
                     });
                 }
             }, 2000);
         });

         $("#tableData input").keypress(function (e) {
             if (e.keyCode == 13) {
                 if (this.value == '') {
                     alert($("#" + this.id).val());
                 }
                 else {
                     if (isNaN(this.value / 1) == false) {
                         var dd = this.id;
                         $.ajax({
                             type: "Post",
                             url: '@Url.Action("newStock", "Items")',
                             dataType: 'html',
                             data: {
                                 Qty: $("#" + this.id).val(),
                                 ItemCode: this.id
                             },
                             success: function (resp) {
                                
                                 var jsonItem = $.parseJSON(resp);
                                 $('.' + dd).text(jsonItem.NewStock);
                                 $('.balance_' + dd).text(jsonItem.Balance);
                                 $('#' + dd).val('');

                             },
                             error: function (data) {
                             }
                         });
                     }
                     else {
                         alert("Please enter number only");
                     }
                 }
             }
         });


         $("#category").change(function () {

             var JsonActivity = {
                 "Id": $("#category").val()
             };
             $.ajax({
                 type: "Post",
                 url: '@Url.Action("GetItemsByCategory", "Items")',
                 dataType: 'html',
                 data: { json_str: JSON.stringify(JsonActivity) },
                 success: function (resp) {
                     var ddl = $("#category");
                     ddl.empty();
                     var subjects = $.parseJSON(resp);
                     //alert(subjects);
                     $.each(subjects, function (index, value) {
                         // alert(value.Name);
                         ddl.append(
                          $('<option/>', {
                              value: value.Id,
                              text: value.Name
                          })
                        );
                     });
                 },
                 error: function (data) {
                 }
             });
         });

     });
   </script>

 <script type="text/javascript">
     function GetPageR(thispage) {
         $.ajax({
             type: "Post",
             url: '@Url.Action("Index", "Items")',
             dataType: 'html',
             data: {
                 category: $("#cat").val(),
                 ItemCode: '',
                 iDisplayStart: thispage,
                 iDisplayLength: $("#SizeR").val(),
                 sEcho: 1
             },
             success: function (resp) {
                 $('#panel').html(resp);
             },
             error: function (data) {
             }
         });
     }  
    </script>

