@model RetailKing.Models.Asset

@{
    ViewBag.Title = "Create";
}
<div class="row">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>New Asset</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <div class="col-md-8 ">
                        @using (Html.BeginForm("Create", "Asset", FormMethod.Post, new { id = "createAsset" }))
                        {
                            @Html.ValidationSummary(true)
                            @Html.AntiForgeryToken()
                            <fieldset>
 
                                @Html.Partial("_CreateOrEdit", Model)

                            </fieldset>
                        }
                        <br />
                        <div>
                            <button class="btn btn-success" onclick="SaveView('createAsset')">Save</button>
                            <button class="btn btn-warning" onclick="GetView('@Url.Action("Index", "Asset")')">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

