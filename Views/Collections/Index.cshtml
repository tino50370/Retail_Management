@model IEnumerable<RetailKing.Models.CollectionPoint>

@{
    ViewBag.Title = "Index";
}

<div class="row content">


    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="breadcrumbs">
            <p><a href="@Url.Action("Index","Home")">Home</a> <i class="icons icon-right-dir"></i> <a href="#">Collections </a> <i class="icons icon-right-dir"></i> Collection Points </p>
        </div>
    </div>


    <!-- Main Content -->
    <section class="main-content col-lg-9 col-md-9 col-sm-9">
        <div id="product-single">

            <div style="background-color:#34495E; height:40px; color:#fff; font-size:large; font-weight:bold; margin: 10px 15px">
            <span style="top :10px;margin-left:20px; color:#fff">Select A Collection Point</span>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12">

                <table class="order-table" >
                    <tr style="background:#A1AAAF; color:#ffffff; height:40px; text-align:start ">

                        <th style="border: solid 1px #ffffff">
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th style="border: solid 1px #ffffff">
                            @Html.DisplayNameFor(model => model.Address)
                        </th>
                        <th style="border: solid 1px #ffffff">
                            @Html.DisplayNameFor(model => model.City)
                        </th>
                       
                        <th>@Html.DisplayNameFor(model => model.Time)</th>

                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr style="cursor:pointer" onclick="setDelivery('@item.Id','@item.Address', '@item.Time')">
                            <td style="width:30%">
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td style="width:40%">
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td style="width:20%">
                                @Html.DisplayFor(modelItem => item.City)
                            </td>
                            <td style="width:10%">
                                @Html.DisplayFor(modelItem => item.Time)
                            </td>
                        </tr>
                    }
                    @if(Model.Count() == 0)
                    {
                        <tr>
                            <td colspan="4"> Collection points coming soon</td>
                        </tr>
                    }

                </table>
            </div>
       </div> 
</section>
</div>