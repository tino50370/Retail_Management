@model IEnumerable<RetailKing.Models.CollectionPoint>

@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Collection Points</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">

                    <p>
                        
                        <button class="btn btn-success" style="float:right" onclick="GetView('/Cities/CreateCollection')"><span></span>Create</button>
                    </p>
                    <table class="table table-striped">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Country)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RegionName )
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Suburb )
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Country  )
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.City)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RegionName )
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Suburb )
                                </td>



                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
    
