<script type="text/javascript">
    $(function () {
        var status = $('#ajaxStatus');
        var percent = $('.percent');
        var bar = $('.bar');
        var options = {
            beforeSend: function () {
                status.fadeIn();
                //bar.width('0%');
                percent.html('0%');
            },
            uploadProgress: function (event, position, total, percentComplete) {
                var pVel = percentComplete + '%';
                // bar.width(pVel);
                // alert("progress");
                percent.html(pVel);

            },
            success: function (result) {
                try {
                    var resp = $.parseJSON(result);

                    if (resp == "error") {
                        alert("An error occured during upload.\r\n Your file has not been uploaded")
                        status.fadeOut(800);
                    }
                    else if (resp == "Format") {
                        alert("Your file format is not supported. Please select a video file")
                        status.fadeOut(800);
                    }
                    else if (resp == "No File") {
                        alert("Please select a video to upload")
                        status.fadeOut(800);
                    }
                }
                catch (error) {

                    $('#RightPanel').html(result);
                    status.fadeOut(800);
                }

            },

            error: function (xhr, textStatus, errorThrown) {
                // $('#panel').html(errorThrown);
                status.fadeOut(800);
            }

        };
        $("#createUser").ajaxForm(options);

    });
</script>

