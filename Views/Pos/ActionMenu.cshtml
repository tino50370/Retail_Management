    <div class="col-md-12" onclick="GetActions('/Pos/CreditPayment', 'CREDIT PAYMENT')" style="margin-top:3px; height:35px; background-color: #FF7514; color: white; font-size:22px; vertical-align: middle; cursor: pointer"><i class="fa fa-credit-card"></i> CREDIT PAYMENT</div>
    <div class="col-md-12" onclick="GetActions('/Pos/Voucher', 'Voucher')" style="margin-top:3px; height:35px; background-color: #FF7514; color: white; font-size:22px; vertical-align: middle; cursor: pointer"><i class="fa fa-credit-card"></i> VOUCHER AND AIRTIME</div>
    <div class="col-md-12" onclick="GetActions('/Pos/ZESA', 'ZESA')" style="margin-top:3px; height:35px; background-color: #FF7514; color: white; font-size:22px; vertical-align: middle; cursor: pointer"><i class="fa fa-credit-card"></i> BILL PAYMENT</div>
</div> 
    

