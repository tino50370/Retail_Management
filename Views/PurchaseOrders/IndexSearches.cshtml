@model RetailKing.Models.Inventory
@{
    ViewBag.Title = "Index";
}


<script type="text/javascript">
    $(document).ready(function (event) {
        $("#SearchInItems").focus();
        var typinTimer;

        $("#category").change(function (event) {
            event.preventDefault();
            $.ajax({
                type: "Post",
                url: '@Url.Action("IndexSearches", "PurchaseOrders")',
                dataType: 'html',
