@model RetailKing.Models.PurchaseOrderz 

@{
    ViewBag.Title = "Create";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@if(Model.grvDetails != null)
{ 
  <script type="text/javascript">
    $(function (event) {

        $("#SearchInItems").focus();
        var typinTimer;
        var dataPost = '@ViewData["DataPost"].ToString()';
      
        
            Reciept = '@Model.grvDetails.Reciept';
            Supplier = '@Model.supplierDetails.AccountCode';
        
        $("#Gcategory").change(function (event)
        {
            event.preventDefault();
            $.ajax({
                type: "Post",
                url: '@Url.Action("IndexSearches", "PurchaseOrders")',
                dataType: 'html',
                data: {
                    company: $("#activeco").text(),
                    category: $("#Gcategory").val(),
                    ItemCode: "",
                    iDisplayLength: $("#SizeR").val(),
                    sEcho: 1
                },
                success: function (resp) {
                    $.fancybox(resp, {
                        openEffect: 'none',
                        closeEffect: 'none'
                    });
                   // $("#panel").html(resp);
                },
                error: function (data) {

                }
            });
        });

        $("#GSubCategory").change(function (event) {
            event.preventDefault();
            $.ajax({
                type: "Post",
                url: '@Url.Action("IndexSearches", "PurchaseOrders")',
                dataType: 'html',
                data: {
                    SubCategory: $("#GSubCategory").val(),
                    ItemCode: "",
                    iDisplayLength: $("#SizeR").val(),
                    sEcho: 1
                },
                success: function (resp) {
                  //  $("#panel").html(resp);
                    $.fancybox(resp, {
                        openEffect: 'none',
                        closeEffect: 'none'
                    });
                },
                error: function (data) {

                }
            });
        });

        $("#SizeR").change(function (event) {
            event.preventDefault();
            $.ajax({
                type: "Post",
                url: '@Url.Action("IndexSearches", "PurchaseOrders")',
                dataType: 'html',
                data: {
                    company: $("#activeco").text(),
                    category: $("#Gcategory").val(),
                    SubCategory: $("#GSubCategory").val(),
                    ItemCode: '',
                    iDisplayLength: $("#SizeR").val(),
                    sEcho: 1
                },
                success: function (resp) {
                    //$('#panel').html(resp);
                    $.fancybox(resp, {
                        openEffect: 'none',
                        closeEffect: 'none'
                    });
                },
                error: function (data) {
                }
            });
        });

        $("#GSearchInItems").keyup(function () {
            // event.preventDefault();
            var s = $('#GSearchInItems').val();
            // alert(s);
            clearTimeout(typinTimer);
            typinTimer = setTimeout(function () {
                // alert($('#SearchInItems').val() );
                if ($('#GSearchInItems').val() == s && $('#GSearchInItems').val() != "") {
                    $.ajax({
                        type: "Post",
                        url: '@Url.Action("IndexSearches", "PurchaseOrders")',
                        dataType: 'html',
                        data: {
                            company: $("#activeco").text(),
                            category: $("#Gcategory").val(),
                            SubCategory: $("#SGubCategory").val(),
                            ItemCode: $("#SearchInItems").val(),
                            iDisplayLength: $("#SizeR").val(),
                            sEcho: 1
                        },
                        success: function (resp) {
                            //$('#panel').html(resp);
                            $.fancybox(resp, {
                                openEffect: 'none',
                                closeEffect: 'none'
                            });
                        },
                        error: function (data) {
                        }
                    });
                }
            }, 2000);

        });

        $("#tableData input").keypress(function (e) {

            if (e.keyCode == 13 || e.keyCode == 9) {
                if (this.value == '') {
                }
                else {
                    if (isNaN(this.value / 1) == false) {
                        var dd = this.id;
                        ItemCode = dd;
                        Qty = this.value;
                        $.ajax({
                            type: "Get",
                            url: '@Url.Action("newStock", "PurchaseOrders")',
                            dataType: 'html',
                            data: {
                                company: $("#activeco").text(),
                                Qty: this.value,
                                Reciept: Reciept,
                                Supplier: Supplier,
                                ItemCode: this.id
                            },
                            success: function (resp) {
                                $.fancybox(resp, {
                                    openEffect: 'none',
                                    closeEffect: 'none'
                                });
                            },
                            error: function (data) {
                            }
                        });
                    }
                    else {
                        alert("Please enter numbers only");
                    }
                }
            }
        });

        $("#tableData input").focusout(function () {
            if (this.value == '') {
            }
            else {
                if (isNaN(this.value / 1) == false) {
                    var dd = this.id;
                    ItemCode = dd;
                    Qty = this.value;
                    $.ajax({
                        type: "Get",
                        url: '@Url.Action("newStock", "PurchaseOrders")',
                        dataType: 'html',
                        data: {
                            company: $("#activeco").text(),
                            Qty: this.value,
                            Reciept: Reciept,
                            Supplier: Supplier,
                            ItemCode: this.id
                        },
                        success: function (resp) {
                            $.fancybox(resp, {
                                openEffect: 'none',
                                closeEffect: 'none'
                            });
                        },
                        error: function (data) {
                        }
                    });
                }
                else {
                    alert("Please enter numbers only");
                }
            }
        })

    });
      function AddItem() {
          event.preventDefault();
          $.ajax({
              type: "Get",
              url: '@Url.Action("IndexSearches", "PurchaseOrders")',
              dataType: 'html',
              data: {
                  company: $("#activeco").text(),
                  sEcho: 1
              },
              success: function (resp) {
                  //$('#panel').html(resp);
                  $.fancybox(resp, {
                      openEffect: 'none',
                      closeEffect: 'none'
                  });
              },
              error: function (data) {
              }
          });
      };
</script>
<div class="row">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_content">
                <div class="row">
  
                    <section class="content invoice">
                        <!-- title row -->
                        <div class="row">
                            <div class="col-xs-12 invoice-header">
                                <h1>
                                    <i class="fa fa-globe"></i> Purchase Order
                                    <small class="pull-right">Date: @DateTime.Now.ToShortDateString()</small>
                                </h1>
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- info row -->
                        <div class="row invoice-info">
                            <div class="col-sm-4 invoice-col">
                                From
                                <address>
                                    <strong>@Model.grvDetails.supplier</strong>
                                    <br>@Model.supplierDetails.Address1 
                                    <br>@Model.supplierDetails.Address2
                                    <br>Phone: @Model.supplierDetails.Phone1 
                                    <br>Email: @Model.supplierDetails.Email
                                </address>
                            </div>
                            <!-- /.col -->
                            <div class="col-sm-4 invoice-col">
                                
                            </div>
                            <!-- /.col -->
                            <div class="col-sm-4 invoice-col">
                                <b>GRV @Model.grvDetails.Reciept</b>
                                <br>
                                <br>
                                <b>Delivery ID:</b> @Model.grvDetails.Invoice
                                <br>
                               
                            </div>
                            <!-- /.col -->
                        </div>
                      
                        <!-- Table row -->
                        <div class="row">
                            <div class="col-xs-12 table">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>Product Code</th>
                                            <th style="width: 59%">Product</th>
                                            <th >Quantity</th>
                                            <th>Subtotal</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            var cnt = 0;
                                         }
                                        @foreach (var item in Model.purchaseLines)
                                        {
                                           cnt++;
                                         <tr onclick="GetFancy('@Url.Action("VoidGRVLine","PurchaseOrders")','@item.ID')">
                                            <td>@cnt</td>
                                            <td>@item.ItemCode</td>
                                            <td>@item.item </td>
                                            <td>
                                                @String.Format("{0:F}", @item.quantity) 
                                            </td>
                                            <td>@String.Format("{0:F}", @item.priceinc)</td>
                                        </tr>
                                        }
                                        <tr id="nextLine">
                                            <td>
                                                <button type="button" class="btn btn-primary btn-sm" onclick="AddItem()"><strong>+</strong></button>
                                            </td>
                                            <td colspan="4"></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->
                        <div class="row">
                            <!-- accepted payments column -->
                            <div class="col-xs-6">
                               
                            </div>
                            <!-- /.col -->
                            <div class="col-xs-6">
                                <p class="lead">Order Value @String.Format("{0:F}", @Model.grvDetails.total)</p>
                                <div class="table-responsive">
                                    <table class="table">
                                        <tbody>
                                            <tr>
                                                <th style="width:50%">Stock Subtotal:</th>
                                                <td>$ @String.Format("{0:F}", @Model.grvDetails.StockedValue) </td>
                                            </tr>     
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->
                        <!-- this row will not appear when printing -->
                        <div class="row no-print">
                            <div class="col-xs-12">
                                <button class="btn btn-default" onclick="window.print();"><i class="fa fa-print"></i> Print</button> 
                            </div>
                        </div>
                    </section>
                    <div>
                        <iframe id="UploadTarget" name="UploadTarget" style="position: absolute; left: -999em; top: -999em;"></iframe>
                        <div id="Images"></div>

                    </div>
                </div>
            </div>
          </div>
        </div> 
    </div>
}
else
{
 <script type="text/javascript">
    $(function (event) {
        GetPOSupplier();
    });

 </script>
}