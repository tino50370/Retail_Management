@model RetailKing.Models.ChangePasswordModel

@{
    ViewBag.Title = "CreateAcount";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        var status = $('#ajaxStatuss');
        var percent = $('.percent');
        var bar = $('.bar');
        var options = {
            beforeSend: function () {
                status.fadeIn();

                percent.html('0%');
            },
            uploadProgress: function (event, position, total, percentComplete) {
                var pVel = percentComplete + '%';
                if (percentComplete == 100) {
                    pVel = "Processing file on server might take a few minuites"
                }
                percent.html(pVel);

            },
            success: function (result) {
              
              
                $("#AccountBody").html(result);
                
            },

            error: function (xhr, textStatus, errorThrown) {
                $('#fileresp').html(errorThrown);
                $('#fileresp').show();
                status.fadeOut(800);
                $.mobile.loading("hide");
            }

        };
        $("#Profilep").ajaxForm(options);
       
    });
</script>

<div>

    @using (Html.BeginForm("ChangePassword", "Accounts", FormMethod.Post, new { enctype = "multipart/form-data", @name = "ProfileP", id = "Profilep" }))
    {
        @Html.AntiForgeryToken()

       

            <!-- Main Content -->
    <section class="main-content col-lg-12 col-md-12 col-sm-129">

        <div class="row">

            <div class="col-lg-12 col-md-12 col-sm-12 register-account">

                <div class="carousel-heading no-margin">
                    <h4>Password Change</h4>
                </div>

                <div class="page-content">
                    <div class="row">

                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <p><strong>Shopper information</strong></p>
                        </div>

                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <p>New Password*</p>
                        </div>
                        <div class="col-lg-8 col-md-8 col-sm-8">
                            @Html.PasswordFor(m => m.NewPassword, new { placeholder = "New password", style = "width:100%; background-color:#F7F7F7" })
                            @Html.ValidationMessageFor(model => model.NewPassword)
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <p>Confirm Password *</p>
                        </div>
                        <div class="col-lg-8 col-md-8 col-sm-8">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", style = "width:100%; background-color:#F7F7F7" })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword)
                        </div>

                    </div>


                    @Html.ValidationSummary(true)
                    <div class="row">
                        @if (ViewData["Success"].ToString() == "Success")
                        {
                            <div id="Success" style="border: 1px solid #2ECC9F;color:#21BF64; padding:8px 8px 8px 8px ;  margin-top:10px;margin-bottom: 20px; width:100%;height:40px">
                                Password change was successful. Use the new password to login next time.
                            </div>
                        }
                        else if (ViewData["Success"].ToString() == "Error")
                        {
                            <div id="Error" style="border:1px solid #E74C3C;color:#E74C3C; padding:8px 8px 8px 8px ; margin-top:10px;margin-bottom: 20px;width:100%;height:40px">
                                Sorry Password Change Failed! Please check your data
                            </div>
                        }


                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <input class="big" type="submit" value="Save Password">
                            <input class="big" type="reset" value="Clear">
                        </div>

                    </div>
                </div>

            </div>

        </div>
        <iframe id="UploadTarget" name="UploadTarget" style="position: absolute; left: -999em; top: -999em;"></iframe>
        <div id="Images"></div>
    </section>
    }
            <!-- /Main Content -->
    


  
    </div>
