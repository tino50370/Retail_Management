@model IEnumerable<RetailKing.Models.MailList >
@{
    ViewBag.Title = "Index";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Mailing List</h2>

            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <p></p>
            <table style="width:100% " class="table table-striped ">
                <thead>
                    <tr>
                        <th>Name </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count() > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr onclick="SelectList('@item.Id', '@item.Name')">
                                <td>@item.Name </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr >
                            <td>You do not have mailing lists </td>

                        </tr>
                    }
                </tbody>


            </table>
        </div>
    </div>
</div>

<script type="text/javascript">
    function SelectList(id, name)
    {
        $('#GroupId').val(id);
        $('#ListName').val(name);
        $.fancybox.close();
    }
</script>