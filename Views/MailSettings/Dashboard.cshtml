@model RetailKing.Models.NotificationDash

@{
    ViewBag.Title = "Index";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="row top_tiles">
       
        @if (Model.stats != null)
        {
            foreach (var item in Model.stats)
            {
            <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="tile-stats">
                    <div class="icon"><i class="fa fa-sort-amount-desc"></i></div>
                    <div class="count">$ @item.Amount </div>
                    <h3>@item.ServiceName</h3>
                   
                </div>
            </div>
            }
        }
    </div>
    <div id="graphs">
        <div class="x_panel">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="dashboard_graph">
                        <div class="row x_title">
                            <div class="col-md-12">
                                <h3>Sales Activities <small>Graph shows sales for the past week</small></h3>
                            </div>

                        </div>
                        <div class="col-md-9 col-sm-9 col-xs-12">

                            <div class="x_content2">
                                <div id="graphx" style="width:100%; height:300px;"></div>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-3 col-xs-12 bg-white">
                            <div class="x_title">
                                <h2>Top 5 Campaign Performance</h2>
                                <div class="clearfix"></div>
                            </div>

                            <div class="col-md-12 col-sm-12 col-xs-6">
                                @{
                            long total = 0;
                            if (Model.stats != null)
                            {
                                total = Model.stats.Sum(u => u.Successful);
                                foreach (var itm in Model.stats)
                                {
                                    long width = itm.Successful * 100 / total;
                                            <div>
                                                <p>@itm.ServiceName</p>
                                                <div class="">
                                                    <div class="progress progress_sm" style="width: @width%;">
                                                        <div class="progress-bar bg-green" role="progressbar" data-transitiongoal="@total"></div>
                                                    </div>
                                                </div>
                                            </div>
                                }
                            }
                                }
                            </div>

                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


 <script type="text/javascript">
     $(function () {
         
         var ch = '@ViewData["Graph"].ToString()'
        
             try{
                 var x = @Html.Raw(Json.Encode(@ViewBag.data));
                
             }catch(e)
             {
                 x = [];
             }

             Morris.Bar({
                 element: 'graphx',
                 data:JSON.parse(x) ,
                 xkey: 'Period',
                 ykeys: ['Sales' ],
                 labels: ['Sales'],
                 barRatio: 0.4,
                 barColors: ['#26B99A'],
                 xLabelAngle: 35,
                 hideHover: 'auto',
                 resize: true
             });
         
     });
 </script>
