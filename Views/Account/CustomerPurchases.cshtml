@model IEnumerable<RetailKing.Models.Payment>
@{
    ViewBag.Title = "My Account";
}

<script src="@Url.Content("~/Scripts/store/main-script.js")"></script>


<!-- Main Content -->
  
<section class="main-content col-lg-12 col-md-12 col-sm-129">

    <div class="row">

        <!-- Heading -->
        <div class="col-lg-12 col-md-12 col-sm-12">

            <div class="carousel-heading no-margin">
                <h4>Payment History</h4>
            </div>

            <div class="page-content">
                <div class="row">

                    @{
                        var mnt = DateTime.Now.Month;
                    }
                    <table class="order-table">
                        <tr>
                            <th>Date</th>
                            <th>Receipt Number</th>
                            <th>Amount</th>
                            <th>Payment Source</th>
                            <th>Source ID</th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {

                        <tr>
                            <td>@item.DateCreated</td>
                            <td>@item.ReceiptNo </td>
                            <td>@item.Amount.Value.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture)  </td>
                            <td>@item.Source </td>
                            <td>@item.SourceRefrence </td>
                            <td><a href="@Url.Action("UserReceipt", "Collections", new { Id = item.ReceiptNo.Trim() })"  class="button green PayDetails" style="cursor:pointer; float:right ">Details</a></td>
                        </tr>

                        }
                        @if (Model.Count() == 0)
                        {
                        <tr>
                            <td colspan="5"> there are no transactions</td>
                        </tr>
                        }

                    </table>

                </div>

            </div>

        </div>

    </div>


</section>