@model IEnumerable<RetailKing.Models.Invite>
@{
    ViewBag.Title = "My Account";
}


<section id="product-single" class="main-content col-lg-12 col-md-12 col-sm-129">
<br />
    <div class="row">

        <!-- Heading -->
        <div class="col-lg-12 col-md-12 col-sm-12">

            <div class="carousel-heading no-margin">
                <h4>Level 1 Assesment</h4>
            </div>

            <div class="page-content">
              @if (@ViewData["Error"] == "False")
              { 
                <div class="row" style="color:#D35400">
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        <p>Purchase Status</p>
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-8">
                        <p> @ViewData["Purchases"]</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        <p>Total Friends Invited</p>
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-8">
                       <p> @ViewData["Size"]</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        <p>Total Accepted</p>
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-8">
                       <p> @ViewData["Accepted"]</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        <p>Total Pending</p>
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-8">
                        <p>@ViewData["Pending"]</p>
                    </div>
                </div>
                <div class="row" style="background:#19A583; color:#fff ">
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        <p>Our Recommendation</p>
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-8">
                       <p> @ViewData["Action"]</p>
                    </div>
                </div>
              }
              else
              {
                <div class="row" style="color:#D35400">
                   
                    <div class="col-lg-8 col-md-8 col-sm-8">
                        <p>Ooops we cant get records on @ViewData["Error"] maybe a different email address was used to Join</p>
                    </div>
                </div>
              }
            </div>

        </div>

    </div>


</section>