@model RetailKing.Models.Inventory
@{
    ViewBag.Title = "Index";
}


<script type="text/javascript">
    $(document).ready(function (event) {
        $("#SearchInItems").focus();
        var typinTimer;

        $("#category").change(function (event) {
            event.preventDefault();
            $.ajax({
                type: "Post",
                url: '@Url.Action("Stocks", "Items")',
                dataType: 'html',
                data: {
                    SubCategory: $("#SubCategory").val(),
                    company: $("#activeco").text(),
                    category: $("#category").val(),
                    ItemCode: "",
                    iDisplayLength: $("#SizeR").val(),
                    sEcho: 1
                },
                success: function (resp) {
                    $("#panel").html(resp);
                },
                error: function (data) {
                    alert("Please specify category");
                }
            });
        });

        $("#SubCategory").change(function (event) {
            event.preventDefault();
            $.ajax({
                type: "Post",
                url: '@Url.Action("Stocks", "Items")',
                dataType: 'html',
                data: {
                    category: $("#category").val(),
                    SubCategory: $("#SubCategory").val(),
                    ItemCode: "",
                    iDisplayLength: $("#SizeR").val(),
                    company: $("#activeco").text(),
                    sEcho: 1
                },
                success: function (resp) {
                    $("#panel").html(resp);
                },
                error: function (data) {
                  //  alert("Please specify Subcategory");
                }
            });
        });

        $("#SizeR").change(function (event) {
            event.preventDefault();
            $.ajax({
                type: "Post",
                url: '@Url.Action("Stocks", "Items")',
                dataType: 'html',
                data: {
                    company: $("#activeco").text(),
                    category: $("#category").val(),
                    ItemCode: '',
                    iDisplayLength: $("#SizeR").val(),
                    SubCategory: $("#category").val(),
                    sEcho: 1
                },
                success: function (resp) {
                    $('#panel').html(resp);
                },
                error: function (data) {
                    ///alert("Please specify Category");
                }
            });
        });

        $("#SearchInItems").keyup(function () {
            // event.preventDefault();
            var s = $('#SearchInItems').val();
            // alert(s);
            clearTimeout(typinTimer);
            typinTimer = setTimeout(function () {
                // alert($('#SearchInItems').val() );
                if ($('#SearchInItems').val() == s && $('#SearchInItems').val() != "") {
                    $.ajax({
                        type: "Post",
                        url: '@Url.Action("Stocks", "Items")',
                        dataType: 'html',
                        data: {
                            company: $("#activeco").text(),
                            category: $("#category").val(),
                            ItemCode: $("#SearchInItems").val(),
                            iDisplayLength: $("#SizeR").val(),
                            sEcho: 1
                        },
                        success: function (resp) {
                            $('#panel').html(resp);
                        },
                        error: function (data) {
                            //alert("Please specify Category");
                        }
                    });
                }
            }, 2000);
        });

        $("#tableData input").keypress(function (e) {

            if (e.keyCode == 13 || e.keyCode == 9) {

                if (this.value == '') {
                    // alert($("#" + this.id).val());
                }
                else {
                    if (isNaN(this.value / 1) == false) {
                        var dd = this.id;
                        $.ajax({
                            type: "Post",
                            url: '@Url.Action("Stock", "Items")',
                            dataType: 'html',
                            data: {
                                company: $("#activeco").text(),
                                Qty: this.value,
                                Reciept: Reciept,
                                ItemCode: this.id
                            },
                            success: function (resp) {
                                var jsonItem = $.parseJSON(resp);
                                //  alert($('#' + dd).val());
                                $('.' + dd).html(jsonItem.NewStock);
                                $('#balance_' + dd).html(jsonItem.Balance);
                                $('#' + dd).val('');
                            },
                            error: function (data) {
                            }
                        });
                    }
                    else {
                        alert("Please enter numbers only");
                    }
                }
            }
        });

    });
</script>

<script type="text/javascript">
    function showbtns(thisitm) {
        $("#" + thisitm ).show();
        $("#plus" + thisitm).hide();
        $("#minus" + thisitm  ).show();
    }
    function hidebtns(thisitm) {
        $("#" + thisitm ).hide();
        $("#minus" + thisitm  ).hide();
        $("#plus" + thisitm).show();
    }
    function GetPageR(thispage) {
        $.ajax({
            type: "Post",
            url: '@Url.Action("Stocks", "Items")',
            dataType: 'html',
            data: {
                company: $("#activeco").text(),
                category: $("#category").val(),
                SubCategory: $("#SubCategory").val(),
                ItemCode: '',
                iDisplayStart: thispage,
                iDisplayLength: $("#SizeR").val(),
                sEcho: 1
            },
            success: function (resp) {
                $('#panel').html(resp);
            },
            error: function (data) {
            }
        });
    }
</script>


<div class="row">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Stock Management </h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <p></p>
                    <table id="gradient-style" style="width:100%; border-style: none ">
                        <tbody>
                            <tr>
                                <td class="style3" style="border-style: none">
                                    <div class="editor-field">
                                        Show @Html.DropDownList("Size", new SelectList(new[] { "10", "20", "50", "100" }, @ViewData["listSize"].ToString()), new { id = "SizeR",@class = "form-control", style = "width:80%" })
                                    </div>
                                </td>
                                <td class="style4" style="border-style: none">
                                    <div class="editor-field">
                                        Category
                                        @Html.DropDownList("Category",
                         new SelectList(
                             Model.categories,
                             "AccountName",
                                      "AccountName"), new { id = "category", @class = "form-control", style = "width:80%" })

                                    </div>
                                </td>
                                <td class="style4" style="border-style: none">
                                    <div class="editor-field">
                                        Subcategory
                                        @Html.DropDownList("SubCategory",
                         new SelectList(
                             Model.SubCategories,
                             "AccountName",
                                      "AccountName"), new { id = "SubCategory", @class = "form-control", style="width:80%"})

                                    </div>
                                </td>
                                <td style="border-style: none;">
                                    <div class="editor-field" style="float:right;width:80%">
                                        Search by ItemCode <input type="text" id="SearchInItems" class = "form-control"/>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <br />
                    <div id="tableData">
                        <table class="table table-striped" style="width:100%">
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Item Code
                                </th>
                                <th>
                                    S/Price
                                </th>
                                <th>
                                    Balance
                                </th>

                                <th>
                                    Category
                                </th>
                                <th>
                                    Reorder Qty
                                </th>

                                <th><button class="btn btn-success pull-right"  onclick="GetView('@Url.Action("Create", "Items")')">Create New</button></th>
                            </tr>

                            @{

                                int cnt = 0;
                                foreach (var item in Model.items)
                                {

                                    <tr>
                                        <td>
                                            @item.ItemName
                                        </td>
                                        <td>
                                            @item.ItemCode
                                        </td>
                                        <td >
                                            @String.Format("{0:F}", @item.SellingPrice )
                                        </td>
                                        <td id="balance_@item.ItemCode.Trim()">
                                            @String.Format("{0:F}", @item.Balance)
                                        </td>

                                        <td>
                                            @item.category
                                        </td>
                                        <td>
                                            @String.Format("{0:F}", @item.Reorder)
                                        </td>
                                        <td>
                                            <button id="plustr_@item.ID" style="float:right" class="btn btn-info btn-sm" onclick="showbtns('tr_@item.ID')"><i class="fa fa-plus-circle" ></i></button>
                                            <button id="minustr_@item.ID" style="display:none; float:right" class="btn btn-info btn-sm" onclick="hidebtns('tr_@item.ID')"><i class="fa fa-minus-circle" ></i></button>
                                        </td>
                                    </tr>
                                     <tr id="tr_@item.ID" style="display:none">
                                         <td colspan="7">
                                             <button class="btn btn-info btn-sm" onclick="GetView('@Url.Action("Edit", "Items")','@item.ID','@ViewData["ThisPage"]')">Edit</button>
                                             <button class="btn btn-danger btn-sm" onclick="GetFancy('@Url.Action("DeleteItem", "Items")','@item.ID','@ViewData["ThisPage"]')">Delete</button>
                                             <button class="btn btn-primary btn-sm" onclick="GetView('@Url.Action("Index", "ItemImages")','@item.ItemCode')">Images</button>
                                             <button class="btn btn-success btn-sm" onclick="GetView('@Url.Action("Index", "Features")','@item.ItemCode')">Features</button>
                                             <button class="btn btn-warning btn-sm" onclick="GetView('@Url.Action("Promotion", "items")','@item.ID')">Promotion</button>
                                             @if (item.HasRecipe != null && item.HasRecipe == true)
                                             {
                                                 <button class="btn btn-dark btn-sm" onclick="GetView('@Url.Action("recipes", "items", new { sSearch = item.ItemCode, sEcho = item.ItemName })','')"><i class="fa fa-flask" style="margin-right:3px"></i>Recipe</button>
                                             }

                                             <button class="btn btn-danger btn-sm" onclick="Zerorise('@item.ID','@item.ItemCode.Trim()')">Zero</button>

                                         </td>

                                        </tr>
                                   
                                }
                            }
                            <tr>
                                <th colspan="12" style="background-color: #E2E4FF; ">
                                    <div onclick="GetPageR()" style="float: left; padding-left: 10px"> Pages</div>
                                    @for (int i = 1; i <= int.Parse(@ViewData["Pages"].ToString()); i++)
                                    {
                                        if (i == int.Parse(@ViewData["ThisPage"].ToString()))
                                        {
                                            <div onclick="GetPageR(@i)" style="float: left; padding-left: 4px; padding-right: 4px; border-style: solid; border-width:1px; margin-left:2px; border-color: Orange; color: Orange; cursor:pointer ">@i</div>
                                        }
                                        else
                                        {
                                            <div onclick="GetPageR(@i)" style="float: left; padding-left: 4px; padding-right: 4px; border-style: solid; border-width:1px; margin-left:2px; border-color: Black; cursor:pointer ">@i</div>
                                        }
                                    }
                                    <div style="float: left; padding-left: 10px"> @ViewData["RecordData"]</div>
                                </th>
                            </tr>
                        </table>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>

           

