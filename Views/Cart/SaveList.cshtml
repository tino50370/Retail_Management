@model RetailKing.Models.shopingList
@{
    ViewBag.Title = "SaveList";
}
<script src="@Url.Content("~/Scripts/store/main-script.js")"></script>
<div class="row content">


    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="breadcrumbs">
            <p><a href="@Url.Action("Index","Home")">Home</a> <i class="icons icon-right-dir"></i> <a href="#">Collections </a> <i class="icons icon-right-dir"></i> Save Shopping List  </p>
        </div>
    </div>

    
        <section class="main-content col-lg-12 col-md-12 col-sm-12">
            <div id="product-single">

                <div style="background-color:#34495E; height:40px; color:#fff; font-size:large; font-weight:bold; margin: 10px 15px">
                    <span style="top :10px;margin-left:20px; color:#fff">Save Shopping List</span>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                   

                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <p>
                                @Html.LabelFor(model => model.Title)
                            </p>
                        </div>
                        <div class="col-lg-8 col-md-8 col-sm-8">
                            @Html.TextBoxFor(m => m.Title, new { style="width:100%", placeholder = "Shopping List Title" })
                        </div><br />
                    <br />
                    <div class="row">
                       
                            <div id="SuccessList" style="border: 1px solid #2ECC9F;color:#2ECC9F; padding:8px 8px 8px 8px ;  margin-top:10px;margin-bottom: 20px; width:80%;height:40px; display:none">
                               Your List was saved successfully.
                            </div>
                       
                            <div id="ErrorList" style="border:1px solid #E74C3C;color:#E74C3C; padding:8px 8px 8px 8px ; margin-top:10px;margin-bottom: 20px;width:80%;height:40px; display:none">
                               Sorry the list was not saved an error occured
                            </div>

                    </div>

                        <div style="color:#A1AAAF" class="col-lg-12 col-md-12 col-sm-12">
                            <a  onclick="SaveListD()" class="button green"  value="Save List">Save List</a>
                        </div>
                    </div>
                </div>
       
    
        </section>
    
</div>