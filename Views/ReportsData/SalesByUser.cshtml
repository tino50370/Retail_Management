<div class="row tile_count">
    @{ 
        List<DailyCashierSale> salez = new List<DailyCashierSale>();
        salez = ViewBag.Salez;
        var total = salez.Sum(u => u.Sales);
    }
    <div class="col-md-3 col-sm-4 col-xs-6 tile_stats_count">
        <span class="count_top"> Total Sales</span>
        <div class="count">@total</div>
    </div>
    @foreach (var itm in salez)
    {
        <div class="col-md-3 col-sm-4 col-xs-6 tile_stats_count">
            <span class="count_top"> @itm.AccountName</span>
            <div class="count"> @String.Format("{0:F}", @itm.Sales)</div>
        </div>
    }
   
</div>

<div class="row">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Sales Report </h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <p></p>

                    <table id="gradient-style" style="width:100%; border-style: none ">
                        <tbody>
                            <tr>
                                <td style="border-style: none">
                                    <div class="editor-field">
                                        Show @Html.DropDownList("Size", new SelectList(new[] { "10", "20", "50", "100" }, @ViewData["listSize"].ToString()), new { id = "SizeR", @class = "form-control", style="width:90%"  })
                                    </div>
                                </td>

                                <td style="border-style: none">
                                    <div class="editor-field">
                                        Start Date
                                        <input type="text" name="DateCreated" id="DateCreated" class ="form-control"  value="@ViewData["sdate"]" style="width: 90%" />
                                    </div>
                                </td>
                                <td style="border-style: none">
                                    <div class="editor-field">
                                        End Date
                                        <input type="text" name="Date" id="Date"  class="input_text form-control" value="@ViewData["edate"]" style="width: 90%" />
                                    </div>
                                </td>
                                <td style="border-style: none">
                                    <div class="editor-field">
                                        Cashier @Html.DropDownList("SearchInItems", new SelectList((IEnumerable<SelectListItem>)ViewBag.Cashiers, "Value", "Text", @ViewData["Cashier"].ToString()), new { id = "SearchInItems", @class = "form-control" })
                                    </div>
                                </td>
                                <td style="border-style: none">
                                    <br/>
                                    <div class="editor-field">
                                        <input type="button"  class="btn btn-success" value="Go"onclick="Go()" />
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <br />
                    <table id="datatable-buttons" class="table table-striped" style="width:100%;">
                        <thead>
                            <tr>
                                @*<th style="width: 6%"></th>*@
                                <th>
                                    Details
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.customer)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Account)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Reciept)
                                </th>

                                <th>
                                    @Html.DisplayName("Credit Period")
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.total)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.discount)
                                </th>
                                <th>
                                    @Html.DisplayName("Sales Date")
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                var newrId = "";
                                var newVId = "";
                                if (item.Reciept != null)
                                {
                                    char[] delimiter = new char[] { '.' };
                                    string[] partz = item.Reciept.Split(delimiter, StringSplitOptions.RemoveEmptyEntries);
                                    newrId = partz[0];// + partz[1] + partz[2];
                                }
                                string rid = newrId + "_b";
                                string ridx = newrId + "_x";

                                if (item.Invoice != null)
                                {
                                    char[] delimita = new char[] { '.' };
                                    string[] part = item.Invoice.Split(delimita, StringSplitOptions.RemoveEmptyEntries);
                                    newVId = part[0];// + part[1] + part[2];
                                }
                                string vidx = newVId + "_x";
                                string vid = newVId + "_b";

                                <tr>
                                    @if (item.Reciept != null && item.Reciept != "")
                                    {
                                        <td style="width: 6%">
                                            <a id="@ridx" class="btn btn-dark  btn-sm " onclick="GetSalesDetail('@item.Reciept','@newrId')"><i class="fa fa-toggle-down"></i></a>
                                            <a id="@rid" class="btn btn-warning  btn-sm" onclick="MinSalesDetail('@item.Reciept','@newrId')" style="display:none"><i class="fa fa-toggle-up"></i></a>
                                        </td>
                                    }
                                    else
                                    {
                                        <td style="width: 6%">
                                            <a id="@vidx" class="btn btn-dark  btn-sm" onclick="GetSalesDetail('@item.Invoice','@newVId')"><i class="fa fa-toggle-down"></i></a>
                                            <a id="@vid" class="btn btn-warning  btn-sm" onclick="MinSalesDetail('@item.Invoice','@newVId')" style="display:none"><i class="fa fa-toggle-up"></i></a>
                                        </td>
                                    }
                                    <td>
                                        @Html.DisplayFor(modelItem => item.customer)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Account)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Reciept)
                                        @Html.DisplayFor(modelItem => item.Invoice)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Period)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.total)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.discount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.dated)
                                    </td>
                                </tr>

                                <tr id="break_@newrId" style="display:none">
                                    @{
                                var pts = item.PaymentModes.Split(',');
                                    }
                                    <td colspan="11">
                                        @foreach (var p in pts)
                                        {
                                            var py = p.Split('-');
                                            if (py.Length >= 2)
                                            {
                                                <span>@py[0] $@py[1], </span>


                                            }
                                        }
                                    </td>
                                </tr>
                                if (item.Reciept != null && item.Reciept != "")
                                {
                                    <tr><td colspan="11" id="@newrId" style="display:none "></td></tr>
                                }
                                else
                                {
                                    <tr><td colspan="11" id="@newVId" style="display:none "></td></tr>
                                }
                            }
                        </tbody>
                        <tr>
                            <th colspan="12" style="background-color: #E2E4FF; ">
                                <div onclick="GetPageR()" style="float: left; padding-left: 10px"> Pages</div>
                                @for (int i = 1; i <= int.Parse(@ViewData["Pages"].ToString()); i++)
                                {
                                    if (i == int.Parse(@ViewData["ThisPage"].ToString()))
                                    {
                                        <div onclick="GetPageR(@i)" style="float: left; padding-left: 4px; padding-right: 4px; border-style: solid; border-width:1px; margin-left:2px; border-color: Orange; color: Orange;">@i</div>
                                    }
                                    else
                                    {
                                        <div onclick="GetPageR(@i)" style="float: left; padding-left: 4px; padding-right: 4px; border-style: solid; border-width:1px; margin-left:2px; border-color: Black ">@i</div>
                                    }
                                }
                                <div style="float: left; padding-left: 10px"> @ViewData["RecordData"]</div>
                            </th>
                        </tr>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>


