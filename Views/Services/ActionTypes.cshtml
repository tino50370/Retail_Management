@model IEnumerable<RetailKing.Models.ServiceActionType>
@{
    ViewBag.Title = "Index";
}

<script type="text/javascript">
    $(document).ready(function (event) {
        $("#SearchInItems").focus();

        $("#cat").change(function (event) {
            event.preventDefault();
            $.ajax({
                type: "Post",
                url: 'Suppliers/Index',
                dataType: 'html',
                data: {
                    category: $("#cat").val(),
                    ItemCode: "",
                    iDisplayLength: $("#SizeR").val(),
                    sEcho: 1
                },
                success: function (resp) {
                    $("#panel").html(resp);
                },
                error: function (data) {
                    alert(data);
                }
            });
        });

        $("#SizeR").change(function (event) {
            event.preventDefault();

            $.ajax({
                type: "Post",
                url: '@Url.Action("Index", "Suppliers")',
                dataType: 'html',
                data: {
                    category: $("#cat").val(),
                    ItemCode: '',
                    iDisplayLength: $("#SizeR").val(),
                    sEcho: 1
                },
                success: function (resp) {
                    $('#panel').html(resp);
                },
                error: function (data) {
                }
            });
        });

        $("#SearchInItems").keyup(function () {
            // event.preventDefault();
            var s = $('#SearchInItems').val();
            //alert(s);
            clearTimeout(typinTimer);
            typinTimer = setTimeout(function () {
                if ($('#SearchInItems').val() == s && $('#SearchInItems').val() != "") {
                    $.ajax({
                        type: "Post",
                        url: '@Url.Action("Index", "Suppliers")',
                        dataType: 'html',
                        data: {
                            category: $("#cat").val(),
                            ItemCode: $("#SearchInItems").val(),
                            iDisplayLength: $("#SizeR").val(),
                            sEcho: 1
                        },
                        success: function (resp) {
                            $('#panel').html(resp);
                        },
                        error: function (data) {
                        }
                    });
                }
            }, 2000);
        });



    });
</script>

<script type="text/javascript">
    function GetPageR(thispage) {
        $.ajax({
            type: "Post",
            url: '@Url.Action("Index", "Suppliers")',
            dataType: 'html',
            data: {
                category: $("#cat").val(),
                ItemCode: '',
                iDisplayStart: thispage,
                iDisplayLength: $("#SizeR").val(),
                sEcho: 1
            },
            success: function (resp) {
                $('#panel').html(resp);
            },
            error: function (data) {
            }
        });
    }
</script>

<div class="row">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Action Types </h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <p></p>

                    <div id="tableData">
                        <table style="width:100%" class="table table-stripe">
                            <tr>

                                <th>
                                    Action Name 
                                </th>
                                <th>
                                    Description
                                </th>
                                <th></th>
                                <th></th>
                            </tr>
                            @{

                               
                                foreach (var item in Model)
                                {
                                   
                                        <tr >

                                            <td>
                                                @item.ActionName 
                                            </td>
                                            <td>
                                                @item.Description
                                            </td>                                           
                                            <td>
                                                   <button class="btn btn-primary btn-sm" style="float: right; margin-right:5px" onclick="GetView('@Url.Action("Edit", "Services")','@item.Id')"><i class="fa fa-edit"></i> </button>
                                            </td>
                                            <td>
                                                <button class="btn btn-danger btn-sm" style="float: right;" onclick="GetView('@Url.Action("Delete", "Services")','@item.Id')"><i class="fa fa-trash"></i></button>
                                            </td>
                                        </tr>
                                    }
                                }
                            
                            <tr>
                                <th colspan="12" style=" background-color: #E2E4FF; ">
                                    <div onclick="GetPageR()" style="float: left; padding-left: 10px"> Pages</div>
                                    @for (int i = 1; i <= int.Parse(@ViewData["Pages"].ToString()); i++)
                                    {
                                        if (i == int.Parse(@ViewData["ThisPage"].ToString()))
                                        {
                                            <div onclick="GetPageR(@i)" style="float: left; padding-left: 4px; padding-right: 4px; border-style: solid; border-width:1px; margin-left:2px; border-color: Orange; color: Orange;">@i</div>
                                        }
                                        else
                                        {
                                            <div onclick="GetPageR(@i)" style="float: left; padding-left: 4px; padding-right: 4px; border-style: solid; border-width:1px; margin-left:2px; border-color: Black ">@i</div>
                                        }
                                    }
                                    <div style="float: left; padding-left: 10px"> @ViewData["RecordData"]</div>
                                </th>
                            </tr>
                        </table>

                    </div>
                </div>

            </div>
        </div>
    </div>

</div>